  <body>
    <!-- data for register in form  -->
    <form method="post" action="/update">
      <!-- <h1>Welcome to cameraDotcom</h1> -->
      <div class="form-content">
        <div>
          <h4>ENTER YOUR NAME</h4>
          <input type="text" name="name" placeholder="ENTER YOYR NAME" />
        </div>
        <div>
          <h4>ENTER YOUR AGE</h4>
          <input type="number" name="age" placeholder="ENTER YOYR AGE" />
        </div>
        <div>
          <h4>NAME OF YOUR CAMERA</h4>
          <input type="text" name="camera" placeholder="NAME OF YOUR CAMERA" />
        </div>
        <div>
          <h4>WHAT COLOR DO YOU LIKE MOST</h4>
          <input
            type="text"
            name="color"
            placeholder="WHAT COLOR DO YOU LIKE MOST"
          />
        </div>
        <button type="submit">submit</button>
      </div>
    </form>
  </body>
